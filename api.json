{
  "api": {
    "name": "StumbleDiamantAPI",
    "version": "0.51.2",
    "description": "API definition for Stumble multiplayer game: authentication, server sync, photon connection, events & tournaments",
    "baseUrl": "https://raw.githubusercontent.com/lemondyt33-png/api-server/refs/heads/main/api.json",
    "endpoints": {
      "auth": {
        "login": "/api/auth/login",
        "logout": "/api/auth/logout",
        "refresh": "/api/auth/refresh"
      },
      "user": {
        "profile": "/api/user/profile",
        "update": "/api/user/update",
        "stats": "/api/user/stats"
      },
      "photon": {
        "connect": "/api/photon/connect",
        "disconnect": "/api/photon/disconnect",
        "joinRoom": "/api/photon/join",
        "leaveRoom": "/api/photon/leave"
      },
      "events": {
        "list": "/api/events",
        "details": "/api/events/{eventId}",
        "register": "/api/events/{eventId}/register"
      },
      "tournaments": {
        "list": "/api/tournaments",
        "details": "/api/tournaments/{tournamentId}",
        "join": "/api/tournaments/{tournamentId}/join",
        "result": "/api/tournaments/{tournamentId}/result"
      },
      "leaderboard": {
        "global": "/api/leaderboard/global",
        "friends": "/api/leaderboard/friends"
      },
      "admin": {
        "stats": "/api/admin/stats",
        "maintenance": "/api/admin/maintenance"
      }
    },
    "headers": {
      "authorization": "Bearer <token>",
      "contentType": "application/json"
    },
    "api_key": "YOUR_SECRET_API_KEY"
  },

  "photonConfig": {
    "appIdRealtime": "f211e8a3-4510-45cb-bd4f-40f7c7852f26",
    "region": "eu",
    "useSecureConnection": true,
    "autoJoinLobby": true,
    "gameVersion": "0.51.2",
    "serverAddress": "YOUR_PHOTON_SERVER_ADDRESS_IF_SELF_HOSTED"
  },

  "eventsConfig": {
    "enabled": true,
    "updateIntervalMs": 60000,
    "types": [
      "daily",
      "weekly",
      "special",
      "tournament"
    ],
    "maxActiveEvents": 5
  },

  "tournamentsConfig": {
    "enabled": true,
    "defaultBracketSize": 32,
    "maxPlayers": 256,
    "rewardSystem": {
      "rank1": { "coins": 5000, "gems": 200 },
      "rank2": { "coins": 3000, "gems": 100 },
      "rank3": { "coins": 1000, "gems": 50 }
    },
    "autoStart": true,
    "registrationDeadlineMinutes": 30
  },

  "serverStatus": {
    "mode": "online",
    "maintenance": false,
    "lastUpdate": "2025-11-01T00:00:00Z",
    "minClientVersion": "1.0.0"
  },

  "logging": {
    "level": "info",      /* possible values: debug, info, warn, error */
    "logToFile": true,
    "filePath": "/var/logs/stumble-api.log"
  },

  "features": {
    "chatEnabled": true,
    "voiceEnabled": false,
    "matchmakingEnabled": true,
    "crossPlatform": true
  }
}
